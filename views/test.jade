extends layout

block content
    h1= title
    p This is Sequelize greeting you :)

    h2 Creating a new country
    form(action="/country/create", method="post")
        input(type="text", name="name")
        input(type="submit")

    h2 Countries

    ul
    each country in countries
        li
            = country.name
            |(
            a(href="/users/" + country.id + "/destroy") Destroy
            | )
            ul
                li
                    | Creating a new task:
                    form(action="/countries/" + user.id + "/cities/create", method="post", style="display: inline")
                        input(type="text", name="name")
                        input(type="submit")
                each city in user.Cities
                    li
                        = city.name
                        |
                        | (
                        a(href="/users/" + country.id + "/tasks/" + city.id + "/destroy") Destroy
                        | )